<title>Edit Profile | MeetDoctor</title>


<h2 class="text-center pt-3"> <i class="bi bi-person-square"></i> Edit my Profile </h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="row m-4">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 col-sm-12">
     
    
      <div class="mt-2 pb-4 ">
        <%= f.label :name, class: "form-label" %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mt-2 pb-4 ">
        <%= f.label :email, class: "form-label"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
      </div>
        <div class="mt-2 pb-4">
          <%= f.label :address, class: "form-label"  %><br />
          <%= f.text_field :address, class: "form-control"  %>
        </div>
      
         <div class="mt-2 pb-4">
          <%= f.label :phone_number, class: "form-label"  %><br />
          <%= f.telephone_field :phone_number, class: "form-control"  %>
        </div>
      
    

    

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mt-2 pb-4">
          <%= f.label :password, class: "form-label"  %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="mt-2 pb-4">
          <%= f.label :password_confirmation, class: "form-label"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
        </div>

        <div class="mt-2 pb-4">
          <%= f.label :current_password, class: "form-label"  %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"  %>
        </div> <br>
            
            
   
      <div class="mt-2 pb-4" style="text-align: center;">
        <%= image_tag(@user.avatar.url, width: "50px") if @user.avatar && @user.avatar.url %><br><br>   
         <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
         <%= f.hidden_field :avatar_cache %>
     </div> 
     
      <div class="mt-2 pb-4">
         <%= f.label :establishment; "Doctor" %>
          
           <%= f.check_box :establishment %> 
      </div> 

      <div class="actions">
              <%= f.submit "Update", class: "btn btn-success" %>
      </div><br><br><br>
    </div>
  </div>
  

  
  <div class="col-lg-4"></div>
   


   
   



  
<% end %>



