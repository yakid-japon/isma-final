    <body>
        <div class="container-fluid bg-success">
            <h1 class="text-center"> <i class="bi bi-bell"></i> You got a new appointment demand from <%= @appointment.user.email %></h1> <br>
        </div>
        <p class="text-center"> <i class="bi bi-file-earmark-text"></i> Appointment Details</p>
        <hr>

        <p>Patient Name : <%= @appointment.user.name %></p><br>
        <p>Patient Email : <%= @appointment.user.email %></p><br>
        <p>Patient Address : <%= @appointment.user.address %></p><br>
        <p>Patient Number : <%= @appointment.user.phone_number %></p><br><br><br>
         <p>Hourly: <%= @appointment.date.strftime("%d %b %Y Ã  %H:%M") if @appointment.date  %></p><br><br><br>

        <p class="text-center">Message</p>
        <hr>
        <br>
        <div class="container border border-1 border-ligh">
            <p> <%= @appointment.message %></p>
        </div>
        
    </body>
</html>